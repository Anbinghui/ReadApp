<?xml version="1.0" encoding="utf-8"?>
<com.jxkj.readapp.view.DisInterceptNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:tag="search"
    android:layout_height="@dimen/dp_48">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_top_bar_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="#fffffe"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_8"
        android:paddingTop="@dimen/dp_8">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/civ_location"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:src="@drawable/mall_location_v2" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:maxWidth="@dimen/dp_80"
                android:text="选择城市"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_search_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_mall_search_circle">

            <ImageView
                android:id="@+id/iv_mall_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_8"
                android:contentDescription="地区"
                android:src="@drawable/fangdajing" />

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_8"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="搜索"

                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_cart"
            android:layout_width="@dimen/dp_24"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_12"
            android:contentDescription="购物车"
            android:src="@drawable/mall_cart_v2" />

        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="@dimen/dp_24"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_6"
            android:contentDescription="消息"
            android:src="@drawable/mall_message" />
    </LinearLayout>

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:background="@color/md_divider_black" />
    </FrameLayout>
</com.jxkj.readapp.view.DisInterceptNestedScrollView>